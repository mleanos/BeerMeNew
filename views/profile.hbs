{{> header}}
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-9 col-md-12 main">
          <h1 class="padprofile">My Beers</h1>
            <div class="row placeholders">
              <div class="col-xs-6 col-sm-3 placeholder moveOver">
                <div class="displayDiv">

                  <form action="/api/upload/user-profile-image" id="profileImageForm" method="POST" enctype="multipart/form-data">
                    Select an image to upload:
                    <input type="file" name="profileImage" id="profileImage">
                    <input type="submit" value="Upload Image">
                  </form>
                </div>
              </div>
            </div>
          <h2 class="sub-header">Beer Details</h2>
          <h3 class="small-header">You've Tried</h3>
          <h5 id="howMany1"></h5>
          <table>
            <thead>
              <tr>
                <th>Beer Name</th>
                <th>Type</th>
                <th>Brewery</th>
              </tr>
            </thead>
          </table>
          <div class="table-responsive">
            <table class="table table-striped">
              <tbody class="topt">
              </tbody>
            </table>
          </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-9 col-md-12 main">
          <h3 class="small-header">Favorites</h3>
          <h5 id="howMany"></h5>
